{{left_sidebar_enabled,right_sidebar_enabled=False,('message' in globals())}}
{{extend 'layout.html'}}
<html>
<head>
 <style>
     .index_add {
         width: 500px;
         float: left;
     }
     
     
     img {
         width: 200px;
         height: 200px;
         float:left;
     }
     .view_post_title {
         float: left;
     }
     .view_post_text {
         float: left;
     }
     .spaceInDiv {
         width: 20px;
        
     }
 </style>
</head>
<body>
    {{for i,row in enumerate(rows):}}
 {{if i==items_per_page: break}}
<a href="{{=URL('view_Add.html',args=[row.id])}}">
<div class="index_add">
     
    <img src="{{=URL('download', args=row.item_img)}}" />
    <div class="view_post_title">Item:</div><div class="view_post_text">{{=row.item_name}}</div><br>
    <div class="view_post_title">Posted By:</div><div class="view_post_text">{{=row.created_by.first_name}}</div><br>
    <div class="view_post_title">Price:</div><div class="view_post_text">{{=row.price}}</div><br>
    
    </div></a><br>
{{pass}}

{{if page:}}
<a href="{{=URL(args=[page-1])}}">previous</a>
{{pass}}

{{if len(rows)>items_per_page:}}
<a href="{{=URL(args=[page+1])}}">next</a>
{{pass}}
</body>
</html>
